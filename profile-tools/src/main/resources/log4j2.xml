        </logger>-->

        <!--只输入级别高于trace的日志-->
        <root level="${LOG_LEVEL}">
            <AppenderRef ref="Console"/>
            <!--<AppenderRef ref="AsyncAllLog"/>-->
        </root>
    </Loggers>
</Configuration>